{
  "compilerOptions": {
    "target": "es6",
    "module": "commonJS",
    "lib": ["es6", "DOM"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declarationDir": "./types",
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ]
}