{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "commonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ES6", "DOM"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./types",
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "examples"]
}
